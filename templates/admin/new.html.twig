{% extends 'base.html.twig' %}

{% block body %}
<div class="form-container">

    <a href="{{ path('admin_articles') }}" class="btn-retour">Retour à la liste des articles</a>

    <h2>Créer un nouvel article</h2>
    {{ form_start(form, {'attr': {'class': 'article-form'}}) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
</div>

<style>
.form-container {
    text-align: center;
    max-width: 600px;
    margin: 40px auto;
    padding: 20px;
}

.article-form {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.article-form input,
.article-form textarea {
    padding: 10px;
    border: 1px solid #007bff;
    border-radius: 4px;
    width: 100%;
    box-sizing: border-box;
}

.article-form textarea {
    resize: vertical; /* Permet le redimensionnement vertical uniquement */
}

/* Sélectionne le dernier input ou textarea avant le bouton de soumission */
.article-form input:last-of-type,
.article-form textarea:last-of-type {
    margin-bottom: 15px; /* Ajoute de l'espace avant le bouton */
}

.article-form button[type="submit"] {
    padding: 10px 15px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s;
    width: 100%;
}

.article-form button[type="submit"]:hover {
    background-color: #63a4ff;
}

.article-form .form-group {
    width: 100%;
}
</style>

{% endblock %}