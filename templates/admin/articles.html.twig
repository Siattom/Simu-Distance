{% extends 'base.html.twig' %}

{% block body %}
<div style="text-align:center;">
    <h2>Liste des Articles</h2>
    <a href="{{ path('admin_article_new') }}" style="margin: 20px auto; display: block; width: max-content;">Cr√©er un nouvel article</a>
</div>

<div style="width: 60%; margin: 20px auto;">
    <table style="width: 100%; border-collapse: collapse;">
        <thead>
            <tr>
                <th style="text-align: left; border-bottom: 2px solid #ddd; padding: 8px;">Titre</th>
                <th style="border-bottom: 2px solid #ddd; padding: 8px;">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td style="text-align: left; border-bottom: 1px solid #ddd; padding: 8px;">{{ article.titre }}</td>
                <td style="border-bottom: 1px solid #ddd; padding: 8px;">
                    <a href="{{ path('admin_article_edit', {'id': article.id}) }}" style="margin-right: 10px;">Modifier</a>
                    <form action="{{ path('admin_article_delete', {'id': article.id}) }}" method="post" style="display: inline;">
                        <button type="submit" class="delete-button">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

<style>
.delete-button {
    padding: 4px 8px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 0.8em;
    transition: background-color 0.3s ease, font-size 0.3s ease;
}

.delete-button:hover {
    background-color: #63a4ff;
    font-size: 0.85em;
}
</style>

{% endblock %}