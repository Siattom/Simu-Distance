{% extends 'base.html.twig' %}

{% block body %}
<div class="main">
<div class="compte-header">
    <h1>Liste des Articles</h1>
    <a class="pasdelien" href="{{ path('admin_article_new') }}">Cr√©er un nouvel article</a>
</div>

<div class="form">
    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Texte1</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.titre }}</td>
                <td>{{ article.texte1 }}</td>
                <td>
                    <a href="{{ path('admin_article_edit', {'id': article.id}) }}" >Modifier</a>
                    <form action="{{ path('admin_article_delete', {'id': article.id}) }}" method="post" >
                        <button type="submit" class="delete-button">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>

<style>
.delete-button {
    padding: 4px 8px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 0.8em;
    transition: background-color 0.3s ease, font-size 0.3s ease;
}

.delete-button:hover {
    background-color: #63a4ff;
    font-size: 0.85em;
}
</style>

{% endblock %}